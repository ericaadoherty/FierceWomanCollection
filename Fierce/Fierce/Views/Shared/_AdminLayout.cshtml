<!DOCTYPE html>
<html>
<head>
    <meta name ="viewport" content="width=device-width" />
    <link rel ="stylesheet" asp-href-include="/bootstrap/css/**/*.min.css" />
    <title>@ViewBag.Title</title>
</head>
<body class="m-1 p-1">
    <div class ="p-2 row" style="color:black; background-color:black; color:white;">
        <div class ="col">
            <h4>@ViewBag.Title</h4>
            </div>
    <div class ="col-2">
                <a class ="btn btn-outline-light" asp-action="Logout" asp-controller="Account">Log Out</a>
        </div>
    </div>
                    @if (TempData["message"] != null)
                    {
                        <div class="alert alert-success"> @TempData["message"]</div>
                    }
                    @RenderBody()
</body>
</html>
