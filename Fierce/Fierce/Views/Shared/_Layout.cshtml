<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet"
          asp-href-include="/bootstrap/css/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/font-awesome/css/*.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Fierce Woman Collection</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a class="col-3 navbar-brand" href="#">Fierce Woman Collection</a>
        <div class="col-4 text-right">
            @await Component.InvokeAsync("CartSummary")
        </div>
    </nav>

    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
        @RenderBody()
            </div>
    </div>
</body>
</html>
