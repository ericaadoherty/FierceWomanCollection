<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet"
          asp-href-include="/bootstrap/css/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/font-awesome/css/*.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display+SC&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width" />
    <title>Fierce Woman Collection</title>
</head>
<body>
    <ul class="nav justify-content-end">
        <li class="nav-item">
            <a class="nav-link" style="font-family: 'Roboto', sans-serif;">
                @await Component.InvokeAsync("NavigationMenu")
            </a>
        </li>
    </ul>
    <a class="nav-link text-center" style="color:black; font-family: 'Playfair Display SC', serif; font-size:70px;" href="#">Fierce Woman Collection</a>
    <div class="row">
        @await Component.InvokeAsync("CartSummary")
    </div>

    <div class="row m-1 p-1">

        <div class="row">
            @RenderBody()
        </div>
    </div>
    <footer class="page-footer font-small blue">

        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            @DateTime.Now.Year Copyright
            <a class="btn btn-sm btn-primary" style="float:right;" asp-action="Login" asp-controller="Account">Login</a>
        </div>
        <!-- Copyright -->

    </footer>
</body>
</html>
