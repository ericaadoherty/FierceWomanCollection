@model Product

    <div class="card border-light mb-3 text-center" style="width: 18rem;
  margin-left: auto;
  margin-right: auto; ">
        <div class="bg-faded p-1">
            <img id="prodimg" src="~/lib/@(Model.ProductID).jpg" style="width: 18rem; />
            <h4>
                @Model.Name
                <span class="badge badge-pill badge-primary">
                    <small>@Model.Price.ToString("c")</small>
                </span>
            </h4>

        </div>
       
        <form id="@Model.ProductID" asp-action="AddToCart"
              asp-controller="Cart" method="post">
            <input type="hidden" asp-for="ProductID" />
            <input type="hidden" name="returnUrl"
                   value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                @Model.Description
                <button type="submit"
                        class="btn" style="background-color:#BF995A;color:white">
                    Add To Cart
                </button>
            </span>
        </form>
    </div>
